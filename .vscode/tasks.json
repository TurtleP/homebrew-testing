    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "Clean",
            "type": "shell",
            "command": "make -C ${fileDirname}/.. clean",
            "group": "build"
        },

        {
            "label": "Build",
            "type": "shell",
            "command": "make -C ${fileDirname}/..",
            "group": "build"
        },

        {
            "dependsOn": [ "Build", "Transfer" ],
            "label": "Build & Transfer",
        }
    ]
}
